  <div class="card-columns">
    <% notes.forEach(n => { %>
      <div id="small-card" class="card small-card m-3">
        <div class="card-header text-right">
          <a class="btn delete-button" id="<%= n.id%>"><i class="far fa-trash-alt"></i></a>
        </div>
        <div class="card-body mt-0">
            <div class="note-text" id="<%= n.id%>" contenteditable="true"> <%= n.text %> </div>
        </div>
        <div class="card-footer">Footer</div>
      </div>
    <% }); %>
  </div>

  <script>
    $('.delete-button').on('click', function(event){
        let note_id = event.currentTarget.id;
        $.get("notes/delete/" + note_id);
      });

      $('.note-text').on('focusout', function(event){
          let note_id = event.currentTarget.id;
          let text = $('.note-text').text();
          $.post("notes/" + note_id, { text: text});
        });
  </script>
